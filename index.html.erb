<p id="notice"><%= notice %></p>


<h1> Boards </h1>

 <%= form_tag({controller: :boards, atcion: :create},{method: :post}) do %>
  <%= text_area_tag :nickname %>
  <%= text_area_tag :comment %> 
  <%= hidden_field_tag :nickname,@board.nickname %>
  <%= hidden_field_tag :comment,@board.comment %>
  <%= submit_tag("投 稿") %>
 <% end %>


<table>
  <thead>
    <tr>
      <th>Boardtype</th>
      <th>Nickname</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.boardtype_id %></td>
        <td><%= board.nickname %></td>
        <td><%= board.comment %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



