<h1 align="center">短期大学</h1>
<td align="center"><%= button_to "戻る", {controller: 'document2', action: 'top'}, {method: :get, class: :back} %></td>
<td align="center"><%= button_to "ホーム", {controller: 'home', action: 'top'}, {method: :get, class: :home} %></td>

<%= form_tag('/courses7_search') do %>
  <p>
  学校名（部分一致）
  <br>
  <%= text_field_tag 'search[name]', session[:search_name] %><%= submit_tag '検索' %>
  </p>
<% end %>

<%= form_tag('/courses7_search') do %>
  <p>
  学科名（部分一致）
  <br>
  <%= text_field_tag 'search[kinds]', session[:search_kinds] %><%= submit_tag '検索' %>
  </p>
<% end %>  

<table border="1">
  <tr>
    <th>学校名</th>
    <th>学科名</th>
    <th>年度</th>
    <th>試験内容</th>
    <th>備考</th>
    <th>登録日時</th>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.kinds %></td>
      <td><%= course.year %></td>
      <td><%= course.contents %></td>
      <td><%= course.remarks %></td>
      <td><%= course.created_at %></td>
    </tr>
  <% end %>
</table>