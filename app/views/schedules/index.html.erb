<p id="notice"><%= notice %></p>

<h1 align="center">年間スケジュール</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <% if @user.schoolyear == 0 %>
        <th>学年</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule.each do |schedule| %>
      <tr>
        <td><% if schedule.filename.present? %>
          <%= image_tag "/assets/ #{schedule.filename}" %>
          <% end %>
        </td>

        <% if @user.schoolyear == 0 %>
          <td><%= schedule.year %></td>
          <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
          <td><%= link_to '削除', schedule, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @user.schoolyear == 0 %>
  <%= link_to '新規作成', new_schedule_path %>
<% end %>

<p> <%= link_to '戻る', '/guidance' %> </p>
